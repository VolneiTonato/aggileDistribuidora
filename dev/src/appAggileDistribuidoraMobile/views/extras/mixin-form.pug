            .btn-toolbar
                button.btn.btn-info.btn-block.input-lg#gerar-relatorio(type="button") Gerar Relatório



mixin radioButtonResumidoDetalhado()
    +radioButtonInline("Tipo Relatório", [{checked: true,  value : "detalhado", text: "Detalhado", name:"report_typeReport"}, { value : "resumido", text: "Resumido", name:'report_typeReport'}])

mixin radioButtonInline(title, data)
    .col-xs-12
        .form-group
            label
                h4.text-green #{title}
            .row
                .col-xs-12
                    each item in data
                        label.radio-inline
                            input(type='radio' checked!=item.checked value!=item.value name!=item.name)
                            strong #{item.text}
        hr

mixin cheboxInline(data)
    .col-xs-12
        .form-group
            each item in data
                label.checkbox-inline
                    input(type='checkbox' value!=item.value name!="report_" + item.value)
                    h4 #{item.text}



