doctype html
html
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        meta(name="google-site-verification" content="eMVej3Mt9BofR58LgGM5U8-SfDiWurubIf4eqvmK5n0")
        title Login | Aggile Distribuidora
        link(rel="stylesheet" href="/public/libraries/bower/bootstrapv3.3.7/dist/css/bootstrap.min.css")
        link(href="/public/libraries/bower/font-awesome/css/font-awesome.min.css", rel="stylesheet")
        style.
            body{ padding-top: 80px}
            
    body
        div.container

            div.col-sm-6.col-sm-offset-3

                h1
                    span.fa.fa-sign-in
                    |Sistema Aggile

                div.clearfix

                if(messages.loginMessage)
                    div.alert.alert-danger= messages.loginMessage
                
                
                block content

                    form(role="form" action="/admin/auth/proccess-login" method="post")

                        div.col-xs-12
                            div.form-group
                                label Login
                                input(type="text" class="form-control input-lg" name="login")

                        div.clearfix

                        div.col-xs-12
                            div.form-group
                                label Password
                                input(type="password" class="form-control input-lg" name="password")
                        

                        div.row
                            div.col-md-4.col-xs-12(style={"margin-top":"10px"})
                                button(type="submit" class="btn btn-block btn-success btn-lg" role="submit") Entrar
                            div.col-md-4.col-xs-12(style={"margin-top":"10px"})
                                a(class="btn btn-warning btn-lg col-md-4 btn-block" href="/" role="button") Voltar ao site