div#block-list-inventario
    div.row
        div.col-xs-12
            div.box.box-primary
            
                div.box-header.with-border
                    h3.box-title Ajuste de Inventario

                div.box-body

                    div.row
                        div.col-xs-12
                            a.btn.btn-app(href="#home")
                                i.fa.fa-home
                                |Início

                            a.btn.btn-app#btn-novo-cadastro(href="#ajuste-inventario/novo")
                                i.fa.fa-plus
                                |Novo Cadastro

    div.row
        div.col-xs-12
            div.box.box-solid.box-success
                div.box-header.with-border
                    h3.col-md-6.col-xs-12.box-title Pesquisa

                    div.box-tools.pull-right
                        button.btn.btn-box-tool(type='button', data-widget='collapse'): i.fa.fa-minus(style={'font-size':'24px'})

                
                div.box-body#inner-form-pesquisa-inventario


    div.row
        div.col-xs-12
            div.box.box-primary

                div.box-header.with-border
                    h3.col-md-6.col-xs-12.box-title Lista de Lancamentos Inventário

                div.box-body

                    div.hidden-xs.hidden-sm
                        table.table.table-striped
                            thead
                                tr
                                    th Data
                                    th Produto
                                    th Qtd.
                                    th Operação
                                    th Observação
                            tbody#inner-inventario-cadastrados-desktop
                        
                            tfooter
                                tr
                                    td(colspan="8")
                                        div.btn-toolbar
                                            button.btn.btn-lg.input-lg.bg-purple.btn-block.carregar-mais(disabled="disabled") Carregar Mais


                    div.visible-xs.visible-sm
                        div.list-group
                            div#inner-inventario-cadastrados-mobile

                        div.btn-toolbar
                            button.btn.btn-lg.input-lg.bg-purple.btn-block.carregar-mais(disabled="disabled") Carregar Mais
                +overlay()


<script></script>
script(type="template" id="template-form-pesquisa-inventario")
    include includes/form-pesquisa.pug    

<script></script>
script(type="template" id="template-list-table-inventario-cadastrados-desktop")
    include includes/table-list-desktop.pug

<script></script>
script(type="template" id="template-list-table-inventario-cadastrados-mobile")
    include includes/table-list-mobile.pug