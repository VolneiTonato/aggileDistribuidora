div#block-form-cliente
    div.row
        div.col-xs-12
            div.box.box-primary
            
                div.box-header.with-border
                    h3.box-title Clientes

                div.box-body

                    div.row
                        div.col-xs-12
                            a.btn.btn-app(href="#home")
                                i.fa.fa-home
                                |Início

                            a.btn.btn-app(href="#cadastro-de-clientes/pesquisa")
                                i.fa.fa-arrow-left
                                |Clientes Cadastrados

                            a.btn.btn-app#btn-novo-cadastro
                                i.fa.fa-plus
                                |Novo Cliente
                            


    div.row
        div.col-xs-12
            div.box.box-primary

                div.box-header.with-border
                    h3.box-title Cadastro de Clientes

                form(role="form" method="POST" id="form-cadastro" autocomplete="off")
                    div.box-body

                        div#row-item(data-item!="<%- JSON.stringify(form) %>" style={'display':'none'})

                        div.col-xs-12.col-md-6

                            div.form-group
                                label(for="razaoSocial") Razão Social
                                input(type="text" required value!="<%= _.get(form,'cliente.razaoSocial') %>" class="form-control input-lg" name="cliente_razaoSocial" id="razao_social" placeholder="Razão Social")

                        div.col-xs-12.col-md-6
                            div.form-group
                                label(for="nomeFantasia") Nome Fantasia
                                input(type="text" required value!="<%= _.get(form,'cliente.nomeFantasia') %>" class="form-control input-lg" name="cliente_nomeFantasia" id="nome_fantasia" placeholder="Nome Fantasia")
                        
                        div.col-xs-12.col-md-6
                            div.form-group
                                label(for="tipoPessoa") Tipo Pessoa
                                select.form-control.input-lg(name="cliente_tipoPessoa" id="tipo-pessoa")
                                    option(value="J" id="tipoPessoaJuridica") Jurídica
                                    option(value="F" id="tipoPessoaFisica") Física
                                
                        div.col-xs-12.col-md-6#bloco-pessoa-juridica
                            div.form-group
                                label CNPJ
                                input(type="text" required value!="<%= _.get(form, 'cliente.cnpjCpf') %>" class="form-control input-lg cnpj-mask" name="cliente_cnpjCpf" id="cnpj" placeholder="CNPJ")

                        div.col-xs-12.col-md-6#bloco-pessoa-fisica(style={display:'none'})
                            div.form-group
                                label CPF
                                input(type="text" required value!="<%= _.get(form, 'cliente.cnpjCpf') %>" class="form-control input-lg cpf-mask" name="cliente_cnpjCpf" id="cpf" placeholder="CPF")


                        div.col-xs-12.col-md-6
                            div.form-group
                                label(for="tipoEstabelecimento") Tipo Estabelecimento
                                select.form-control.input-lg(name="cliente_tipoEstabelecimento" id="tipo-estabelecimento")

                        div.col-xs-12.col-md-3
                            div.form-group.form-group-lg
                                label(for="status") Ativo
                                select#status.form-control.input-lg(name="cliente_status")
                                +overlay()

                        div.col-xs-12.col-md-6
                            div.form-group
                                label(for="contato") Contato
                                input(type="text" required value!="<%= _.get(form, 'cliente.contato') %>" class="form-control input-lg" name="cliente_contato" id="contato" placeholder="Contato")

                        div.col-xs-12.col-md-6
                            div.form-group
                                label(for="observacao") Observações
                                textarea(rows="5" class="form-control input-lg" name="cliente_observacao" id="observacao") <%= _.get(form, 'cliente.observacao') %>
            
                        div.col-xs-12.col-md-6
                            #inner-telefone-cliente

                        div.clearfix

                        .col-xs-12
                            .box.box-solid.box-warning
                                .box-header.with-border
                                    h3.box-title Endereço Principal

                        include ../../../../extras/endereco-form.pug

                        div.clearfix

                        .col-xs-12
                            div#inner-content-clienteren-endereco



                        div.col-xs-12
                            input(type="hidden" value!="<%= _.get(form,'id') %>" class="form-control input-sm hidden" name="id" id="id")
                            input(type="hidden" value!="<%= _.get(form,'cliente.id') %>" class="form-control input-sm hidden" name="cliente_id" id="cliente_id")
                            input(type="hidden" value!="<%= _.get(form,'uuid') %>" class="form-control input-sm hidden" name="cliente_uuid" id="uuid")
                            input(type="hidden" value!="<%= _.get(form,'endereco.id') %>" class="form-control input-sm hidden" name="endereco_id" id="endereco_id")

                    div.box-footer

                        div.col-xs-12.col-md-12
                            button(type="button" class="btn btn-primary btn-lg input-lg" id="save") Salvar