div#form-parcela-despesas

    div.col-xs-12
        h6.alert.alert-info Lançamento de Parcelas

    form(autocomplete="off")
        div.col-xs-12.col-md-6
            div.form-group
                label(for="data") Quantidade
                input(type="text" required class="integer form-control input-lg text-uppercase" name="parcela_quantidade" id="parcela-quantidade" placeholder="Quantidade de Parcelas")

        div.col-xs-12.col-md-6
            div.form-group
                label(for="data") Dias para vencimento
                input(type="text" required class="integer form-control input-lg text-uppercase" name="parcela_dias" id="parcela-dias" placeholder="Dias para vencimento")

        div.col-xs-12
            div.form-group
                div.hidden-xs.hidden-sm
                    div.btn-toolbar
                        button.btn.btn-lg.input-lg.btn-success.btn-lancar-parcela-historico(type="button") Lançar

                div.visible-xs.visible-sm
                    button.btn.btn-success.btn-lancar-parcela-historico.btn-block.input-lg(type="button") Lançar
