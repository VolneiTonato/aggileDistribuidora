div#block-list-financeiro-despesa
    div.row
        div.col-xs-12
            div.box.box-primary
            
                div.box-header.with-border
                    h3.box-title Lançamentos

                div.box-body

                    div.row
                        div.col-xs-12
                            a.btn.btn-app(href="#home")
                                i.fa.fa-home
                                |Início

                            a.btn.btn-app#btn-novo-cadastro(href="#financeiro/contas-a-pagar/nova")
                                i.fa.fa-plus
                                |Nova Despesa


    div.row
        div.col-xs-12
            div.box.box-solid.box-success
                div.box-header.with-border
                    h3.col-md-6.col-xs-12.box-title Pesquisa

                    div.box-tools.pull-right
                        button.btn.btn-box-tool(type='button', data-widget='collapse'): i.fa.fa-minus(style={'font-size':'24px'})
                
                div.box-body#inner-form-pesquisa-despesa


    div.row
        div.col-xs-12
            div.box.box-primary#overlay-painel-list-cadastro

                div.box-header.with-border
                    h3.col-md-6.col-xs-12.box-title Lista de Contas a Pagar

                div.box-body
                    div#inner-despesa-lancadas-parent

                +overlay()


<script></script>
script(type="template" id="template-form-pesquisa-despesa")
    include include-lista/form-pesquisa.pug

<script></script>
script(type="template" id="template-list-despesa-lancadas-parent")
    include include-lista/despesa-lancadas.pug           