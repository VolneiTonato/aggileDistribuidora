div#block-list-produto-repasse-ecommerce
    div.row
        div.col-xs-12
            div.box.box-primary
            
                div.box-header.with-border
                    h3.box-title Repasse Produtos Ecommerce

                div.box-body

    div.row
        div.col-xs-12
            div.box.box-solid.box-success
                div.box-header.with-border
                    h3.col-md-6.col-xs-12.box-title Pesquisa

                    div.box-tools.pull-right
                        button.btn.btn-box-tool(type='button', data-widget='collapse'): i.fa.fa-minus(style={'font-size':'24px'})

                
                div.box-body#inner-form-pesquisa-produto


    div.row
        div.col-xs-12
            div.box.box-primary#overlay-painel-list-cadastro

                div.box-header.with-border
                    h3.col-md-6.col-xs-12.box-title Lista de Produtos

                div.box-body
                
                    div.hidden-xs.hidden-sm

                        table.table.table-striped
                            thead
                                tr
                                    th(width="25%") Descrição
                                    th(width="15%") Ecommerce
                                    th(width="15%") Destaque
                                    th(width="15%") Preço Venda
                                    th(width="15%") Promoção
                                    th(width="15%") Estoque
                                    th Opções
                            tbody#inner-produtos-cadastrados-desktop

                            tfooter
                                tr
                                    td(colspan="9")
                                        div.btn-toolbar
                                            button.btn.btn-lg.input-lg.bg-purple.btn-block.carregar-mais(disabled="disabled") Carregar Mais



                    div.visible-xs.visible-sm

                        div.list-group
                            div#inner-produtos-cadastrados-mobile

                        div.btn-toolbar
                            button.btn.btn-lg.input-lg.bg-purple.btn-block.carregar-mais(disabled="disabled") Carregar Mais

                    div.box-footer
                        div.hidden-xs.hidden-sm    
                            div.btn-toolbar
                                button.btn.btn-lg.input-lg.btn-success.btn-block.salvar-geral.btn-is-desktop Salvar

                        div.visible-xs.visible-sm
                            div.btn-toolbar
                                button.btn.btn-lg.input-lg.btn-success.btn-block.salvar-geral.btn-is-mobile Salvar
                
                +overlay()


