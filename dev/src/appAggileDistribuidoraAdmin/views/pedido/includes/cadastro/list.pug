div#block-list-pedido-cliente
    div.row
        div.col-xs-12
            div.box.box-primary
            
                div.box-header.with-border
                    h3.box-title Lançamentos

                div.box-body

                    div.row
                        div.col-xs-12
                            a.btn.btn-app(href="#home")
                                i.fa.fa-home
                                |Início

                            a.btn.btn-app#btn-novo-cadastro(href="#pedidos/cliente/novo")
                                i.fa.fa-plus
                                |Novo Pedido

    div.row
        div.col-xs-12
            div.box.box-primary
                div.box-header.with-border
                    h3.col-md-6.col-xs-12.box-title Pesquisa

                    div.box-tools.pull-right
                        button.btn.btn-box-tool(type='button', data-widget='collapse'): i.fa.fa-minus(style={'font-size':'24px'})

                
                div.box-body#inner-form-pesquisa-pedido-cliente
                


    div.row
        div.col-xs-12
            div.box.box-solid.box-primary#overlay-painel-list-cadastro

                div.box-header.with-border
                    h3.col-md-6.col-xs-12.box-title Lista de Pedidos

                div.box-body

                    div#inner-pedidos-lancados-parent

                +overlay()

